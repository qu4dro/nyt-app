<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ArticleCardStyle" parent="Widget.Material3.CardView.Elevated">
        <item name="elevation"> 0dp</item>
        <item name="cardElevation">0dp</item>
        <item name="android:elevation">0dp</item>
        <item name="cardCornerRadius">8dp</item>
    </style>

    <style name="HintCardStyle" parent="Widget.Material3.CardView.Elevated">
        <item name="elevation"> 0dp</item>
        <item name="cardElevation">0dp</item>
        <item name="android:elevation">0dp</item>
        <item name="cardCornerRadius">8dp</item>
        <item name="strokeWidth">2dp</item>
        <item name="android:backgroundTint">@android:color/transparent</item>
    </style>

    <style name="ChipStyle" parent="Widget.Material3.Chip.Assist">
        <item name="android:textAppearance">@style/Text.Semibold.14</item>
    </style>

    <style name="ChipShapeAppearance" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">cut</item>
        <item name="cornerSize">4dp</item>
    </style>

    <style name="TextInputLayoutSearch" parent="Widget.MaterialComponents.TextInputLayout.FilledBox.Dense">
        <item name="boxStrokeColor">@drawable/box_stroke_color_selector</item>
        <item name="boxCornerRadiusTopEnd">22dp</item>
        <item name="boxCornerRadiusTopStart">22dp</item>
        <item name="boxCornerRadiusBottomEnd">22dp</item>
        <item name="boxCornerRadiusBottomStart">22dp</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeWidthFocused">0dp</item>
        <item name="errorTextAppearance">@style/Text.Regular.12</item>
        <item name="hintTextAppearance">@style/Text.Medium.12</item>
        <item name="hintTextColor">@color/hintColor</item>
        <item name="errorIconDrawable">@null</item>
        <item name="endIconTint">@color/hintColor</item>
        <item name="startIconTint">@color/hintColor</item>
        <item name="boxBackgroundColor">@color/boxBackground</item>
        <item name="android:textColorHint">@color/hintColor</item>
    </style>

    <style name="TextInputEditTextSearch">
        <item name="android:textAppearance">@style/Text.Medium.14</item>
        <item name="android:textColor">@color/black</item>
    </style>

</resources>